        Title="Shape01" Height="300" Width="300" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel Name="sp" Grid.Row="0" >
            
        </StackPanel>
        <Button Content="Button" Grid.Row="1" Height="23" HorizontalAlignment="Left"  Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="81,1,0,0" Name="textBoxX" VerticalAlignment="Top" Width="30" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="133,1,0,0" Name="textBoxY" VerticalAlignment="Top" Width="30" Grid.Row="1" />
