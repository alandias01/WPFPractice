<Window x:Class="WPFPractice.Binding.MasterDetailWithListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MasterDetailWithListView" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <ListView ItemsSource="{Binding}" DisplayMemberPath="Symbol" IsSynchronizedWithCurrentItem="True" />
            <TextBlock Text="{Binding Symbol}"/>
            <TextBlock Text="{Binding Qty}"/>
            <TextBlock Text="{Binding Price}"/>
        </StackPanel>
        
    </Grid>
</Window>
