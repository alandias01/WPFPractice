<Window x:Class="WPFPractice.Commands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="299" Width="671">
    <Grid>
        <DataGrid SelectedItem="{Binding CurrentItem, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding EmpList}" AutoGenerateColumns="True" Margin="12,71,12,12" Name="dgEmployees"  />
        <Button Content="Show current" Command="{Binding ShowCurrentCommand}" CommandParameter="{Binding SelectedItem, ElementName=dgEmployees}" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="buttonShowCurrent" VerticalAlignment="Top" Width="89" />
        <Button Content="Update" Height="23" HorizontalAlignment="Left" Margin="122,12,0,0" Name="buttonUpdate" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
