<Window x:Class="WPFPractice.CollectionView.CV2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CV2" Height="288" Width="617">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41" />
            <RowDefinition Height="208*" />
        </Grid.RowDefinitions>
        
        
        <DataGrid x:Name="dgv1" AutoGenerateColumns="True" ItemsSource="{Binding Pos}" Grid.Row="1"/>
        <CheckBox Content="Symbol" Height="16" HorizontalAlignment="Left" Margin="12,12,0,0" Name="checkBox1" VerticalAlignment="Top" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked"/>
        <CheckBox Content="Qty" Height="16" HorizontalAlignment="Left" Margin="75,12,0,0" Name="checkBox2" VerticalAlignment="Top" />
        <CheckBox Content="Rate" Height="16" HorizontalAlignment="Left" Margin="117,12,0,0" Name="checkBox3" VerticalAlignment="Top" />
        <CheckBox Content="Group Data" Height="16" HorizontalAlignment="Left" Margin="180,12,0,0" Name="checkBox4" VerticalAlignment="Top" Checked="checkBox4_Checked" Unchecked="checkBox4_Unchecked" />
    </Grid>
</Window>
