<Window x:Class="WPFPractice.controls.UI01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UI01" MinHeight="600"  Background="#FF1D1616" MinWidth="900" Width="900" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="445*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Grid.RowSpan="2" Margin="5" BorderThickness="0" CornerRadius="10" Background="#FF242424">
            <StackPanel Margin="2" Orientation="Vertical" >
                <TextBlock Foreground="#FFE5D9D9">MENU ITEMS</TextBlock>
                <Button Style="{StaticResource MBS2}"  Content="View Positions"  Name="button1"  />
                <Button Style="{StaticResource MBS}"  Content="Search Position"  Name="button2"  Margin="6"/>
                <Button Style="{StaticResource MBS}"  Content="PNL"  Name="button3"  Margin="6" />
                <Button Style="{StaticResource MBS}"  Content="Reports" Name="button4"  Margin="6"/>
                 
            </StackPanel>
        </Border>

        


    </Grid>
</Window>
