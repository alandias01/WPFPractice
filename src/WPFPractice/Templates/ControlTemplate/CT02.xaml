<Window x:Class="WPFPractice.Templates.ControlTemplate.CT02"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CT02" Height="392" Width="514" >
    <Window.Resources>
        <LinearGradientBrush StartPoint=".5,0" EndPoint=".5,3" x:Key="color1">
            <GradientStop Color="Gray" Offset="0" />
            <GradientStop Color="DarkGray" Offset="1" />
            
        </LinearGradientBrush>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="176*" />
            <RowDefinition Height="59*" />
            <RowDefinition Height="118*" />
        </Grid.RowDefinitions>
        
        <Rectangle Grid.Row="0" Fill="{StaticResource color1}" Width="150" Height="150"/>
        
    </Grid>
</Window>
