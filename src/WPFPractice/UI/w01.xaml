<Window x:Class="WPFPractice.UI.w01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="w01" Height="350" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="img/bg01.jpg" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,550,250"/>
    </Window.Background>
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Right" Width="160" Background="Black" CornerRadius="0,0,20,20" BorderThickness="1">
                <StackPanel Orientation="Horizontal" Margin="3" HorizontalAlignment="Right">
                    <Label Content="Login" Foreground="White"/>
                    <TextBox Width="100" Height="17"/>
                </StackPanel>
            </Border>
            <Border Height="40"  BorderThickness="1"  Background="Black" CornerRadius="15,15,0,0" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                <StackPanel  Orientation="Horizontal" Margin="3">
                    <TextBlock Text="ewertg" Foreground="White"/>
                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Window>
