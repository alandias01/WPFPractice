<Window x:Class="WPFPractice.CombineUserControls.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainForm" Height="374" Width="715"
        xmlns:lm="clr-namespace:WPFPractice.CombineUserControls"
        
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
                

        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" x:Name="LeftMenu" />

        <StackPanel Grid.Column="1" Grid.Row="0" x:Name="TopRight" />
        <StackPanel Grid.Column="1" Grid.Row="1" x:Name="BottomRight" />

    </Grid>
</Window>
