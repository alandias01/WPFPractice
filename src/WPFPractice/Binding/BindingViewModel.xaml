<Window x:Class="WPFPractice.Binding.BindingViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BindingViewModel" Height="300" Width="300"
        xmlns:loc="clr-namespace:WPFPractice.Binding">    
    <Window.DataContext>
        <loc:MainViewModel />
    </Window.DataContext>
    
    
    <Grid >
        <WrapPanel >
            <TextBlock Text="{Binding person.Name}"/>
        </WrapPanel>
        
    </Grid>
</Window>
